};

&gcr {
	mux-controller {
		compatible = "mmio-mux";
		#mux-control-cells = <1>;

		mux-reg-masks = <0x38 0x07>; // 0: reg 0x38, bits 2:0
		idle-states = <0>; // UART switch mode 1
	};
};

&i2c1 {
	status = "okay";
};

&i2c2 {
	status = "okay";
};

&i2c3 {
	status = "okay";
};

&i2c4 {
	status = "okay";

	eeprom@52 {
