};

&i2c12 {
	status = "okay";
};

&i2c13 {
	status = "okay";
};

&i2c14 {
	status = "okay";
};

&i2c15 {
	status = "okay";
};

&i2c16 {
	status = "okay";
};

&i2c22 {
	status = "okay";

	rtc0: rtc@6f {
		compatible = "nuvoton,nct3018y";
		reg = <0x6f>;
		#clock-cells = <0>;

		interrupt-parent = <&gpio2>;
		interrupts = <5 IRQ_TYPE_EDGE_FALLING>; /* gpio 37 */
		interrupt-names = "irq";
		wakeup-source;
	};
};

&i2c23 {
	pinctrl-0 = <&smb23b_pins>;
	status = "okay";
};

&mdio0 {
	status = "disabled";
};

&mdio1 {
	status = "disabled";
};

&peci {
	cmd-timeout-ms = <1000>;
	npcm,pull-down = <0>;
