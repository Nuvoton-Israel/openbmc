				status = "okay";
				i2c-scl-hz = <400000>;
				i3c-scl-hz = <4000000>;
			};
		};
	};

 	pinctrl: pinctrl@f0800000 {
		pinctrl-names = "default";
		pinctrl-0 = <
				&espi_pins
				&mmcrst_pins
				&pin240_slew
