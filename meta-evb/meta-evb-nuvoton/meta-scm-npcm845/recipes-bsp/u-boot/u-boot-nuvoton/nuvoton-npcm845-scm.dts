};

&udc8 {
	status = "okay";
	phys = <&usbphy1 0>;
};

&udc9 {
	status = "okay";
	phys = <&usbphy2 2>;
};

&host_intf {
	type = "espi";
	ioaddr = <0x2e>;
	channel-support = <0xf>;
};

