};

&i2c14 {
	status = "okay";
};

&i2c15 {
	status = "okay";
};

&i2c16 {
	status = "okay";
};

&i2c22 {
	status = "okay";
	nuvoton,volt-1.8v;
};

&usbphy1 {
	status = "okay";
};

&usbphy2 {
	status = "okay";
};

&udc0 {
	status = "okay";
	phys = <&usbphy1 0>;
};

&udc1 {
